<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent" android:id="@+id/currentLocationLayout" android:layout_height="match_parent" android:orientation="vertical">
    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent">
    <FrameLayout
        android:id="@+id/current_location_viewflipper"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout android:visibility="visible" android:id="@+id/getLocationFromFormLayout"
            android:padding="20dp" android:layout_width="match_parent" android:layout_height="match_parent">

            <TextView android:id="@+id/adressTextView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" android:text="Address"  android:layout_alignParentTop="true" />

            <LinearLayout android:id="@+id/streetLayout"
                android:layout_width="match_parent" android:layout_below="@+id/adressTextView"
                android:layout_height="wrap_content" android:orientation="horizontal" >
                    <LinearLayout
                        android:layout_width="30dp"
                        android:layout_marginRight="5dp"
                        android:layout_height="match_parent" android:gravity="center">

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" android:scaleType="fitCenter" android:src="@drawable/account_circle"/>

                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="250dp"
                        android:layout_height="match_parent" android:orientation="vertical">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content" android:text="Street" />
                        <EditText android:layout_width="match_parent" android:layout_height="wrap_content"
                            android:inputType="textMultiLine"
                            android:lines="2"
                            android:minLines="2"
                            android:gravity="top|left"
                            android:maxLines="2"
                            />

                    </LinearLayout>
            </LinearLayout>

            <LinearLayout android:id="@+id/cityLayout" android:layout_below="@+id/streetLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" android:orientation="horizontal" >
                <LinearLayout
                    android:layout_width="30dp"
                    android:layout_height="match_parent" android:gravity="center" android:layout_marginRight="5dp">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" android:scaleType="fitCenter" android:src="@drawable/account_circle" />

                </LinearLayout>
                <LinearLayout
                    android:layout_width="250dp"
                    android:layout_height="match_parent" android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" android:text="City" />

                    <Spinner android:id="@+id/city_spinner" android:layout_width="150dp" android:layout_height="wrap_content"  />

                </LinearLayout>
            </LinearLayout>

                        <LinearLayout android:layout_below="@+id/cityLayout" android:id="@+id/stateLayout"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content" android:orientation="horizontal" android:layout_marginTop="@dimen/form_input_margin_top">

                            <LinearLayout
                                android:layout_width="30dp"
                                android:layout_marginRight="5dp"
                                android:layout_height="match_parent" android:gravity="center">

                                <ImageView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content" android:scaleType="fitCenter" android:src="@drawable/account_circle"/>

                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="150dp"
                                android:layout_height="match_parent" android:orientation="vertical">
                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content" android:text="State" />
                                <Spinner android:id="@+id/state_spinner" android:layout_width="match_parent" android:layout_height="match_parent"   />

                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="100dp"
                                android:layout_height="match_parent" android:orientation="vertical">
                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content" android:text="Pincode" />
                                <EditText android:layout_width="match_parent" android:layout_height="match_parent"  android:inputType="number" android:numeric="integer" android:maxLength="6"/>

                            </LinearLayout>

                        </LinearLayout>

                        <View android:layout_below="@+id/stateLayout" android:id="@+id/seperatorView"
                            android:layout_marginTop="@dimen/form_input_margin_top"
                            android:layout_marginBottom="10dp"
                            android:layout_width="wrap_content"
                            android:background="@drawable/gradient_seperator"
                            android:layout_height="2dp"></View>

                        <TextView android:layout_below="@+id/seperatorView" android:id="@+id/ownOrRentedTextView"
                            android:layout_marginTop="@dimen/form_input_margin_top"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"  android:text="Is the House own or rented ?"/>

                        <RadioGroup android:layout_below="@+id/ownOrRentedTextView" android:id="@+id/ownOrRentedRadioGroup"
                            android:layout_marginTop="@dimen/form_input_margin_top"
                            android:paddingLeft="@dimen/form_input_padding_left"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content" android:orientation="horizontal"  >
                            <RadioButton
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content" android:text="Rent" />
                            <RadioButton
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content" android:text="Own"/>

                        </RadioGroup>

                        <LinearLayout android:layout_below="@+id/ownOrRentedRadioGroup"
                            android:id="@+id/house_layout"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content" android:orientation="horizontal" android:layout_marginTop="@dimen/form_input_margin_top">
                            <LinearLayout
                                android:layout_width="30dp"
                                android:layout_height="match_parent" android:gravity="center" android:layout_marginRight="5dp">

                                <ImageView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content" android:scaleType="fitCenter" android:src="@drawable/account_circle" />

                            </LinearLayout>
                            <LinearLayout android:id="@+id/own_layout"
                                android:layout_width="250dp"
                                android:layout_height="match_parent" android:orientation="vertical">

                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content" android:text="Own" />

                                <Spinner android:id="@+id/own_spinner" android:layout_width="150dp" android:layout_height="wrap_content"   />





                            </LinearLayout>

                        </LinearLayout>


        </RelativeLayout>

        <LinearLayout
            android:visibility="gone"
            android:id="@+id/getLocationFromGPSLayout"
            android:layout_width="match_parent" android:layout_height="match_parent" android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:paddingTop="50dp" android:gravity="center" android:orientation="vertical"
                >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" android:text="Get location from GPS" />

                <ImageView
                    android:layout_marginTop="30dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" android:src="@drawable/gps_layer"/>

            </LinearLayout>


            <View
                android:layout_marginTop="40dp"
                android:layout_marginBottom="20dp"
                android:layout_width="wrap_content"
                android:background="@drawable/gradient_seperator"
                android:layout_height="2dp"></View>

            <Button
                android:id="@+id/editCurrentAddressButton"
                android:layout_width="match_parent"
                android:layout_gravity="center_vertical"
                android:layout_height="wrap_content" android:capitalize="characters" android:text="Edit your current address  >" android:background="@null"
                />

        </LinearLayout>
    </FrameLayout>
    </ScrollView>


    <android.support.design.widget.FloatingActionButton
        android:id="@+id/gpsLocationFormButton"
        android:src="@drawable/gps_layer"
        app:fabSize="normal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignTop="@+id/currentLocationLayout"
        android:layout_marginTop="-80dp"
        android:layout_marginRight="20dp"
        android:layout_gravity="right" />


</LinearLayout>
