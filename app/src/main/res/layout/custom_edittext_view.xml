<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:id="@+id/rl_custom_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    <TextView
        android:id="@+id/tv_label" android:layout_toEndOf="@+id/ac_icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" android:text="@string/label"
        />

    <ImageView
        android:id="@+id/ac_icon"
        android:layout_below="@+id/tv_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" android:scaleType="fitCenter" />

    <EditText android:layout_toEndOf="@+id/ac_icon" android:layout_below="@+id/tv_label" android:layout_width="match_parent"
        android:layout_height="wrap_content" android:singleLine="true"
        android:id="@+id/et_text"
        />
    </RelativeLayout>
</LinearLayout>