<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:custom="http://schemas.android.com/apk/res-auto"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.mantralabsglobal.cashin.MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="130dp"
        android:background="@color/primary"
        android:orientation="vertical"
        android:paddingTop="20dp"
        android:id="@+id/linearLayout">
        
        <RelativeLayout
            android:id="@+id/actionBarLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="20dp" android:paddingRight="20dp"
            android:orientation="horizontal">
            <ImageView
                android:layout_alignParentStart="true"
                android:layout_width="100dp"
                android:layout_height="30dp"
                android:src="@drawable/your_profile"/>

            <com.github.lzyzsd.circleprogress.DonutProgress
                android:layout_alignParentEnd="true"
                android:layout_gravity="end"
                android:id="@+id/donut_progress"
                android:layout_width="30dp"
                android:layout_height="30dp"

                custom:donut_progress="30"/>


        </RelativeLayout>

        <LinearLayout
            android:id="@+id/main_layout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:layout_marginTop="10dp"
            >


            <ImageButton
                android:layout_width="75dp"
                android:layout_height="75dp"
                android:layout_marginLeft="5dp"
                android:scaleType="fitXY"
                android:id="@+id/yourPhotoButton"
                android:src="@drawable/your_photos"
                android:background="@color/primary"

                />

            <ImageButton
                android:layout_width="75dp"
                android:layout_height="75dp"
                android:layout_marginLeft="2dp"
                android:scaleType="fitXY"
                android:id="@+id/yourIdentityButton"
                android:src="@drawable/your_identity" android:background="@color/primary"
                />
            <ImageButton
                android:layout_width="75dp"
                android:layout_height="75dp"
                android:layout_marginLeft="2dp"
                android:scaleType="fitXY"
                android:id="@+id/workButton"
                android:src="@drawable/work" android:background="@color/primary"
                />
            <ImageButton
                android:layout_width="75dp"
                android:layout_height="75dp"
                android:layout_marginLeft="-10dp"
                android:scaleType="fitXY"
                android:id="@+id/financialButton"
                android:src="@drawable/financial" android:background="@color/primary"
                />
            <ImageButton
                android:layout_width="75dp"
                android:layout_height="75dp"
                android:layout_marginLeft="-10dp"
                android:scaleType="fitXY"
                android:id="@+id/socialButton"
                android:src="@drawable/social" android:background="@color/primary"
                />
        </LinearLayout>

       <!-- <android.support.v4.view.ViewPager
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <android.support.v4.view.PagerTitleStrip

                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/header_strart"
                android:textColor="#fff"
                android:paddingTop="4dp"
                android:paddingBottom="4dp" >


            </android.support.v4.view.PagerTitleStrip>

            <ImageButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:src="@drawable/your_photo"
                android:background="@color/header_strart"/>
        </android.support.v4.view.ViewPager>-->
    </LinearLayout>

    <FrameLayout android:id="@+id/main_frame"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/linearLayout"
        android:layout_alignParentLeft="true">

    </FrameLayout>

</RelativeLayout>
