<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <!-- customize the color palette -->
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryDark">@color/primary_dark</item>
        <item name="colorAccent">@color/accent</item>
        <item name="android:spinnerStyle">@style/spinner_style</item>
        <item name="donut_text_size">10dp</item>
        <item name="donut_finished_color">@color/light</item>
        <item name="donut_finished_stroke_width">2dp</item>
        <item name="donut_unfinished_stroke_width">2dp</item>
        <item name="donut_text_color">@color/light</item>
    </style>

    <style name="AppTheme.Form"></style>

    <style name="AppTheme.Form.Header" parent="android:TextAppearance.DeviceDefault.Large">

    </style>

    <style name="AppTheme.Form.Header.Inverse" parent="android:TextAppearance.DeviceDefault.Large.Inverse">

    </style>

    <style name="AppTheme.Intro" parent="Theme.AppCompat.Light.NoActionBar"/>
    <style name="AppTheme.Intro.Header" parent="AppTheme.Form.Header.Inverse">
        <item name="android:textSize">@dimen/text_size_large_intro</item>
    </style>

    <style name="AppTheme.Intro.Image" >
        <item name="android:scaleType">fitCenter</item>
        <item name="android:layout_margin">50dp</item>
    </style>

    <style name="loginTheme" parent="AppTheme">
        <item name="colorControlNormal">@color/light</item>
        <item name="colorControlActivated">@color/accent</item>
        <item name="colorControlHighlight">@color/accent</item>
        <item name="android:editTextStyle">@style/Login_EditTextStyle</item>
        <item name="android:textViewStyle">@style/Login_TextViewStyle</item>
    </style>

    <style name="spinner_style" parent="Base.Widget.AppCompat.Spinner.Underlined"/>

    <style name="LoginFont" parent="@android:style/TextAppearance.Medium">
        <item name="android:textColor">#FFFFFF</item>
    </style>

    <style name="primary_nav_button" parent="android:Widget.DeviceDefault.Button">
        <item name="android:textSize">9sp</item>
        <item name="android:textColor">@color/light</item>
        <item name="android:background">?android:attr/selectableItemBackground</item>
    </style>
    <style name="Login_EditTextStyle" parent="@android:style/Widget.EditText">
        <item name="android:textColor">@color/light</item>
        <item name="android:layout_height">45dip</item>
    </style>
    <style name="Login_TextViewStyle" parent="@android:style/Widget.TextView">
        <item name="android:textColor">@color/light</item>
        <item name="android:layout_height">45dip</item>
    </style>

    <style name="AppOverlayTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="android:windowActionBarOverlay">true</item>
        <item name="android:actionBarStyle">@style/ActionBarStyle.Transparent.TitleTextStyle</item>

        <!-- Support library compatibility -->
        <item name="windowActionBarOverlay">true</item>
    </style>

    <style name="ActionBarStyle.Transparent.TitleTextStyle" parent="@android:style/TextAppearance.Holo.Widget.ActionBar.Title">
        <item name="android:textColor">@android:color/white</item>
    </style>

    <style name="Widget.CashIn.ActionBar" parent="Widget.AppCompat.ActionBar">
        <item name="android:background">@color/primary</item>
        <item name="theme">@style/ThemeOverlay.CashIn.ActionBar</item>
        <item name="popupTheme">@style/ThemeOverlay.AppCompat.Light</item>
    </style>

    <style name="ThemeOverlay.CashIn.ActionBar" parent="ThemeOverlay.AppCompat.ActionBar">
        <item name="android:textColorPrimary">@color/light</item>
    </style>

    <style name="text_medium_white_nl">
        <item name="android:textSize">@dimen/text_medium</item>
        <item name="android:textColor">@color/white_max</item>
    </style>

    <style name="sign_up_button_component" parent="@style/text_medium_white_nl">
        <item name="android:gravity">center_vertical</item>
        <item name="android:background">@drawable/sign_up_button_component_selector</item>
    </style>

</resources>
