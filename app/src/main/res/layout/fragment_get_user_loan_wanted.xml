<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.mantralabsglobal.cashin.ui.fragment.tabs.GetUserLoanWantedFragment">

    <LinearLayout
        android:id="@+id/loan_approved_view_fragment"
        android:layout_height="wrap_content"
        android:layout_width="fill_parent"
        android:orientation="vertical"
        />

    <LinearLayout
        android:id="@+id/cc_ask_user_amount_view"
        android:layout_height="match_parent"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:layout_width="match_parent"
        android:orientation="vertical">

        <TextView android:text="@string/enter_loan_amount_view" android:layout_width="match_parent"
            android:layout_height="wrap_content"
            />

        <com.mantralabsglobal.cashin.ui.view.CustomEditText
            android:id="@+id/cc_loan_amount_user"
            android:layout_marginTop="30dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" app:field_label="@string/required_amount" app:field_icon="@drawable/ic_name"/>

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="60dp"
            android:text="@string/apply_for_loan"
            android:id="@+id/apply_loan_button"
            android:background="@drawable/bank_detail_statements"
            android:textColor="@color/white"
            android:layout_centerHorizontal="true"
            android:layout_gravity="center"/>

        <TextView android:text="@string/take_permission_user"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="bottom|center"
            android:layout_gravity="bottom" />

</LinearLayout>

</FrameLayout>
