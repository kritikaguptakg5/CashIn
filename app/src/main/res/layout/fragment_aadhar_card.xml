<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent" android:layout_height="match_parent" android:orientation="vertical" android:id="@+id/ll_aadhar_fragment">
    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent" android:fillViewport="true">
    <FrameLayout
        android:id="@+id/aadhar_card_viewflipper"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:visibility="gone"
            android:id="@+id/ll_aadhar_camera"
            android:layout_width="match_parent" android:gravity="top|center"  android:layout_height="match_parent" android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:paddingTop="50dp" android:gravity="center" android:orientation="vertical"
                >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" android:text="Scan Aadhar card QR Code" />

                <ImageButton android:id="@+id/ib_launchScanner"
                    android:layout_marginTop="30dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" android:src="@drawable/ic_camera"
                    android:background="?android:attr/selectableItemBackground"/>

            </LinearLayout>


            <View
                android:layout_marginTop="40dp"
                android:layout_marginBottom="20dp"
                android:layout_width="wrap_content"
                android:background="@drawable/gradient_seperator"
                android:layout_height="2dp"></View>


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:paddingTop="20dp" android:paddingBottom="20dp" android:text="Don't have the Aadhar card ready?" />

            <Button
                android:id="@+id/bt_launch_aadhar_form"
                android:layout_width="match_parent"
                android:layout_gravity="center_vertical"
                android:layout_height="wrap_content" android:capitalize="characters" android:text="Enter Aadhar details  >" android:background="@null"
                />

        </LinearLayout>

        <RelativeLayout android:id="@+id/rl_aadhar_detail" android:paddingLeft="20dp" android:paddingRight="20dp" android:padding="20dp"
            android:layout_width="match_parent" android:layout_height="match_parent" android:visibility="visible"
            android:layout_gravity="left|top">

            <TextView
                android:id="@+id/tv_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:text="Name"
                android:layout_toRightOf="@+id/ac_name"
                android:layout_marginTop="30dp"/>

            <ImageView
                android:id="@+id/ac_name"
                android:layout_below="@+id/tv_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:scaleType="fitCenter" android:src="@drawable/ic_name" />

            <EditText android:layout_toRightOf="@+id/ac_name" android:layout_below="@+id/tv_name" android:layout_width="match_parent"
                android:layout_height="wrap_content" android:singleLine="true"  android:hint="eg. Praveen Kumar"
                android:id="@+id/et_name"
                />



            <TextView android:id="@+id/tv_address"
                 android:layout_marginTop="30dp"
                android:layout_below="@+id/et_name"
                android:layout_width="wrap_content"
                android:layout_toRightOf="@+id/ac_address"
                android:layout_height="wrap_content" android:text="Address"/>

            <ImageView
                android:id="@+id/ac_address"
                android:layout_below="@+id/tv_address"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:scaleType="fitCenter" android:src="@drawable/ic_home_address" />

            <EditText android:id="@+id/et_address"
                android:layout_toRightOf="@+id/ac_address" android:layout_below="@+id/tv_address"
                android:layout_width="match_parent" android:layout_height="wrap_content" android:singleLine="true"  android:hint="eg. Bangalore" />

           <TextView android:id="@+id/tv_gender"
               android:layout_toRightOf="@+id/ac_gender" android:layout_marginTop="30dp"
               android:layout_below="@+id/et_address"
               android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:text="Gender"/>

            <ImageView
                android:id="@+id/ac_gender"
                android:layout_below="@+id/tv_gender"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:scaleType="fitCenter" android:src="@drawable/ic_gender" />


            <Spinner android:id="@+id/spin_gender"
                android:layout_toRightOf="@+id/ac_gender" android:layout_below="@+id/tv_gender"
                android:layout_width="match_parent" android:layout_height="wrap_content" android:singleLine="true"  android:hint="Male" />

           <TextView android:id="@+id/tv_aadhar"
               android:layout_toRightOf="@+id/ac_aadhar" android:layout_marginTop="30dp"
               android:layout_below="@+id/spin_gender"
               android:layout_width="wrap_content"
              android:layout_height="wrap_content" android:text="Aadhar Number"/>
            <ImageView
                android:id="@+id/ac_aadhar"
                android:layout_below="@+id/tv_aadhar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:scaleType="fitCenter" android:src="@drawable/ic_aadhar_number" />

            <EditText android:id="@+id/et_aadhar"
                android:layout_toRightOf="@+id/ac_aadhar" android:layout_below="@+id/tv_aadhar"
                android:layout_width="match_parent" android:layout_height="wrap_content" android:singleLine="true"  android:hint="Aadhar number" />



          <!--<TextView android:id="@+id/tv_mobile"
              android:layout_marginLeft="30dp" android:layout_marginTop="30dp"
              android:layout_below="@+id/et_aadhar"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content" android:text="Mobile"/>
            <ImageView
                android:id="@+id/ac_mobile"
                android:layout_below="@+id/tv_mobile"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:scaleType="fitCenter" android:src="@drawable/account_circle" />

            <EditText android:id="@+id/et_mobile"
                android:layout_toRightOf="@+id/ac_mobile" android:layout_below="@+id/tv_mobile"
                android:layout_width="match_parent" android:layout_height="wrap_content" android:singleLine="true"  android:hint="Mobile Number" />-->

            <View
                android:id="@+id/v_relation"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_below="@+id/et_aadhar"
                android:layout_marginTop="30dp"

                />


            <ImageView
                android:id="@+id/ac_relationship"
                android:layout_below="@+id/v_relation"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:scaleType="fitCenter" android:src="@drawable/ic_son_of" />

            <LinearLayout
                android:id="@+id/ll_sonOf"
                android:layout_toRightOf="@+id/ac_relationship"
                android:layout_below="@+id/v_relation"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <Spinner android:id="@+id/spin_relationship"
                    android:layout_toRightOf="@+id/ac_relationship"
                    android:layout_below="@+id/v_relation"
                       android:layout_width="0dp"
                    android:layout_weight="2" android:layout_height="wrap_content"  />

                <EditText android:id="@+id/et_relation_name" android:layout_toEndOf="@id/spin_relationship" android:layout_marginLeft="20dp"
                    android:layout_below="@+id/v_relation" android:layout_width="0dp"
                    android:layout_weight="3" android:layout_height="wrap_content" android:singleLine="true" android:hint="Father's Name" />

            </LinearLayout>

            <View
                android:id="@+id/v_dob"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_below="@+id/ll_sonOf"
                android:layout_marginTop="30dp"
            />

            <TextView
                android:id="@+id/tv_dob"
                android:layout_toRightOf="@+id/ac_dob"
                android:layout_below="@+id/v_dob"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:text="Date of birth"/>
            <ImageView
                android:id="@+id/ac_dob"
                android:layout_below="@+id/tv_dob"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:scaleType="fitCenter" android:src="@drawable/ic_calender" />
            <EditText android:id="@+id/et_dob"
                android:focusable="false"
                android:layout_toRightOf="@+id/ac_dob" android:layout_below="@+id/tv_dob"
                android:layout_width="wrap_content" android:layout_height="match_parent" android:singleLine="true"
                style="@android:style/Widget.Material.Spinner.Underlined"
                android:layout_marginLeft="10dp"
                android:width="150dp" />


            <!--

                                                              <LinearLayout
                                                                  android:layout_width="match_parent"
                                                                  android:layout_height="wrap_content" android:orientation="horizontal">
                                                                  <TextView
                                                                      android:layout_width="wrap_content"
                                                                      android:layout_height="wrap_content" android:text="Date of birth"/>
                                                                  <EditText android:layout_width="wrap_content" android:layout_height="match_parent" android:singleLine="false" android:hint="MM/dd/YYYY" />
                                                                  <TextView
                                                                      android:layout_width="wrap_content"
                                                                      android:layout_height="wrap_content" android:text="24 years"/>

                                                              </LinearLayout>
                                                  -->

        </RelativeLayout>

            <!-- <eu.livotov.zxscan.ScannerView android:visibility="visible"
                android:id="@+id/scanner"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />-->
        <me.dm7.barcodescanner.zxing.ZXingScannerView
            android:visibility="gone"
            android:id="@+id/scanner"
            android:layout_height="match_parent"
            android:layout_width="match_parent"
            ></me.dm7.barcodescanner.zxing.ZXingScannerView>

    </FrameLayout>
    </ScrollView>

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/fab_launchScanner"
        android:src="@drawable/ic_camera"
        app:fabSize="normal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignTop="@+id/ll_aadhar_fragment"
        android:layout_marginTop="-80dp"
        android:layout_marginRight="20dp"
        android:layout_gravity="right"  />

</LinearLayout>
