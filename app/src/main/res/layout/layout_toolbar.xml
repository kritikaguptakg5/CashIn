<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.Toolbar xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:minHeight="?attr/actionBarSize"
    android:orientation="vertical"
    style="@style/Widget.CashIn.ActionBar"
    >

    <Button
        android:layout_height="30dip"
        android:layout_width="75dp"
        android:id="@+id/submit_button"
        android:text="@string/apply"
        android:visibility="gone"
        android:layout_gravity="right"
        android:layout_marginRight="5dp"
        android:layout_marginLeft="4dp"
        android:background="@drawable/submit_user_profile_detail"
        android:textColor="@color/white"
        />

    <FrameLayout
        android:layout_width="wrap_content"
        android:layout_gravity="right"
        android:layout_height="wrap_content">

    <ProgressBar
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="75dp"
        android:layout_marginRight="5dp"
        android:layout_marginLeft="4dp"
        android:layout_height="30dip"
        android:progressDrawable="@drawable/user_profile_detail_progress"
        android:id="@+id/user_profile_data_progress_bar"
        android:layout_gravity="right" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:id="@+id/apply_text_view"
            android:textColor="@color/white"
            android:text="Apply" />
    </FrameLayout>

   <!-- <com.github.lzyzsd.circleprogress.DonutProgress
