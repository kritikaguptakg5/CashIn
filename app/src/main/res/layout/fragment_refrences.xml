<?xml version="1.0" encoding="utf-8"?>
<FrameLayout  xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent" android:layout_height="match_parent" android:orientation="vertical" android:id="@+id/ll_aadhar_fragment">

        <LinearLayout
            android:visibility="gone"
            android:id="@+id/vg_select_reference"
            android:layout_width="match_parent" android:gravity="top|center"  android:layout_height="match_parent" android:orientation="vertical">

            <FrameLayout style="@style/AppTheme.Form.Fragment.Top"
                android:layout_gravity="center"
                android:textAlignment="center">

                <TextView
                   android:text="@string/select_three_reference"
                    style="@style/AppTheme.Form.Fragment.Top.Header"
                    />

                <android.support.design.widget.FloatingActionButton
                    android:id="@+id/fab_select_reference"
                    android:src="@drawable/ic_account" android:visibility="visible"
                    app:fabSize="normal"
                    android:layout_width="75dp"
                    android:layout_height="75dp"
                    android:layout_margin="24dp"
                    android:layout_gravity="center"
                    android:scaleType="fitCenter"
                    app:elevation="10dp"
                    app:borderWidth="0dp"/>
            </FrameLayout>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/vg_reference_detail" android:visibility="visible" android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ExpandableListView android:layout_weight="10"
                android:id="@+id/elv_reference_list"
                android:layout_width="match_parent"
                android:groupIndicator="@null"
                android:layout_height="0dp"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp" android:layout_weight="2" android:gravity="center">
                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" android:text="@string/send_request" />

            </LinearLayout>

        </LinearLayout>


    <ProgressBar
        android:id="@+id/progres_bar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="gone"
        style="?android:attr/progressBarStyleLarge"
        android:layout_gravity="center" />

</FrameLayout>
