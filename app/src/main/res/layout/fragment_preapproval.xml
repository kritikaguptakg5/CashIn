<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.mantralabsglobal.cashin.ui.fragment.intro.SelfieFragment" android:background="@color/intro_slider_one" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent" android:orientation="vertical" android:layout_gravity="center">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:text="@string/get_preapproved_in_ten_minutes"
            android:gravity="center"
            android:layout_weight="5"
            style="@style/AppTheme.Intro.Header" />

        <ImageView
            android:layout_weight="10"
            android:layout_width="match_parent"
            android:layout_height="0dp" android:src="@drawable/intro_timings" style="@style/AppTheme.Intro.Image"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="0dp" android:layout_weight="4"/>
    </LinearLayout>

</FrameLayout>