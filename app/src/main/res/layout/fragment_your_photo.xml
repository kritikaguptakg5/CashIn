<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent" android:layout_height="match_parent" android:orientation="vertical" android:id="@+id/business_card_viewflipper">

        <LinearLayout
            android:id="@+id/vg_image_picker" android:visibility="visible"
            android:layout_width="match_parent" android:gravity="top|center"  android:layout_height="match_parent" android:orientation="vertical">

            <FrameLayout style="@style/AppTheme.Form.Fragment.Top">

                <TextView
                    android:text="@string/take_a_selfie"
                    style="@style/AppTheme.Form.Fragment.Top.Header"
                    />

                <ImageButton
                    android:id="@+id/launch_camera_button"
                    android:src="@drawable/ic_action_camera"
                    style="@style/AppTheme.Form.Fragment.Top.Image" />

            </FrameLayout>

            <View style="@style/AppTheme.Form.Fragment.Seperator"></View>

            <FrameLayout style="@style/AppTheme.Form.Fragment.Bottom">

                <TextView style="@style/AppTheme.Form.Fragment.Bottom.Text"
                   android:gravity="top|center"
                    android:text="@string/or"
                    android:layout_gravity="center_horizontal" />

                <Button style="@style/AppTheme.Form.Fragment.Bottom.Button"
                    android:id="@+id/choose_from_gallery_button"
                    android:text="@string/upload_from_gallery"
                    />

            </FrameLayout>



        </LinearLayout>

            <LinearLayout android:visibility="gone" android:id="@+id/vg_image_viewer" android:padding="20dp" android:layout_width="match_parent" android:layout_height="match_parent" android:orientation="vertical">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" android:id="@+id/photo_viewer" />

            </LinearLayout>

    <ProgressBar
        android:id="@+id/progres_bar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="gone"
        style="?android:attr/progressBarStyleLarge"
        android:layout_gravity="center" />

</android.support.design.widget.CoordinatorLayout>
