<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent" android:layout_height="match_parent" android:orientation="vertical">
    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent">
    <FrameLayout
        android:id="@+id/pan_card_viewflipper"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:visibility="gone"
            android:id="@+id/panCardSnapLayout"
            android:layout_width="match_parent" android:gravity="top|center"  android:layout_height="match_parent" android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:paddingTop="50dp" android:gravity="center" android:orientation="vertical"
                >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" android:text="Take a snap of your PAN Card" />

                <ImageView
                    android:layout_marginTop="30dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" android:src="@drawable/business_card_layer"/>

            </LinearLayout>


            <View
                android:layout_marginTop="40dp"
                android:layout_marginBottom="20dp"
                android:layout_width="wrap_content"
                android:background="@drawable/gradient_seperator"
                android:layout_height="2dp"></View>


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:paddingTop="20dp" android:paddingBottom="20dp" android:text="@string/pan_card_not_ready" />

            <Button
                android:id="@+id/enterPANDetailsButton"
                android:layout_width="match_parent"
                android:layout_gravity="center_vertical"
                android:layout_height="wrap_content" android:capitalize="characters" android:text="@string/enter_pan_card_details_button" android:background="@null"
                />

        </LinearLayout>

        <RelativeLayout android:visibility="visible" android:id="@+id/enterPANDetailLayout" android:paddingLeft="20dp" android:paddingRight="20dp" android:padding="20dp"
            android:layout_width="match_parent" android:layout_height="match_parent">

            <TextView
                android:id="@+id/tv_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:text="Name"
                android:layout_marginLeft="30dp" android:layout_marginTop="30dp"/>

            <ImageView
                android:id="@+id/ac_name"
                android:layout_below="@+id/tv_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:scaleType="fitCenter" android:src="@drawable/account_circle" />

            <EditText android:layout_toRightOf="@+id/ac_name" android:layout_below="@+id/tv_name" android:layout_width="match_parent"
                android:layout_height="wrap_content" android:singleLine="true"  android:hint="eg. Praveen Kumar"
                android:id="@+id/et_name"
                />

            <TextView android:id="@+id/tv_pan"
                   android:layout_marginLeft="30dp" android:layout_marginTop="30dp"
                   android:layout_below="@+id/et_name"
                   android:layout_width="wrap_content"
                  android:layout_height="wrap_content" android:text="@string/pan_number"/>
            <ImageView
                android:id="@+id/ac_pan"
                android:layout_below="@+id/tv_pan"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:scaleType="fitCenter" android:src="@drawable/account_circle" />

            <EditText android:id="@+id/et_pan"
                android:layout_toRightOf="@+id/ac_pan" android:layout_below="@+id/tv_pan"
                android:layout_width="match_parent" android:layout_height="wrap_content" android:singleLine="true"  android:hint="@string/pan_number_hint" />

            <View
                android:id="@+id/v_dob"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_below="@+id/et_pan"
                android:layout_marginTop="30dp"
                />

            <TextView
                android:id="@+id/tv_dob"
                android:layout_marginLeft="30dp"
                android:layout_below="@+id/v_dob"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:text="Date of birth"/>
            <ImageView
                android:id="@+id/ac_dob"
                android:layout_below="@+id/tv_dob"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:scaleType="fitCenter" android:src="@drawable/account_circle" />
            <EditText android:id="@+id/et_dob"
                android:layout_toRightOf="@+id/ac_dob" android:layout_below="@+id/tv_dob"
                android:layout_width="wrap_content" android:layout_height="match_parent" android:singleLine="true"
                style="@android:style/Widget.Material.Spinner.Underlined"
                android:layout_marginLeft="10dp"
                android:width="150dp" />

            <View
                android:id="@+id/v_relation"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_below="@+id/et_dob"
                android:layout_marginTop="30dp"

                />

            <ImageView
                android:id="@+id/ac_relationship"
                android:layout_below="@+id/v_relation"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:scaleType="fitCenter" android:src="@drawable/account_circle" />
            <Spinner android:id="@+id/spin_relationship"
                android:layout_toRightOf="@+id/ac_relationship"
                android:layout_below="@+id/v_relation"

                android:layout_width="100dp" android:layout_height="wrap_content"  />

            <EditText android:id="@+id/et_relation_name" android:layout_toEndOf="@id/spin_relationship" android:layout_marginLeft="20dp"
                android:layout_below="@+id/v_relation"
                android:layout_width="wrap_content" android:layout_height="match_parent" android:singleLine="true" android:hint="@string/relation_name_hint" />


            <!--

                                                              <LinearLayout
                                                                  android:layout_width="match_parent"
                                                                  android:layout_height="wrap_content" android:orientation="horizontal">
                                                                  <TextView
                                                                      android:layout_width="wrap_content"
                                                                      android:layout_height="wrap_content" android:text="Date of birth"/>
                                                                  <EditText android:layout_width="wrap_content" android:layout_height="match_parent" android:singleLine="false" android:hint="MM/dd/YYYY" />
                                                                  <TextView
                                                                      android:layout_width="wrap_content"
                                                                      android:layout_height="wrap_content" android:text="24 years"/>

                                                              </LinearLayout>
                                                  -->

        </RelativeLayout>


    </FrameLayout>
    </ScrollView>

</LinearLayout>
